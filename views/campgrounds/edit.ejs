<%- include('../partials/header.ejs') %>

<div class="container">
  <div class="row my-5">
    <div class="col-6 mx-auto">
      <h4 class="text-center">EDIT <%= campground.name %></h4>
      <form class="mb-2" action="/campgrounds/<%= campground.id %>?_method=PUT" method="POST">
        <div class="form-group">
          <label for="name">Campground name</label>
          <input type="text" class="form-control" id="name" name="campground[name]" value="<%= campground.name %>">
        </div>
        <div class="form-group">
          <label for="image">Campground image url</label>
          <input type="text" class="form-control" id="image" name="campground[image]" value="<%= campground.image %>">
        </div>
        <div class="form-group">
          <label for="description">Campground description</label>
          <textarea class="form-control" rows="10" id="description" name="campground[description]"><%= campground.description %></textarea>
        </div>
        <button type="submit" class="btn btn-primary">SUBMIT</button>
      </form>
      <a href="/campgrounds">Go Back</a>
    </div>
  </div>
</div>


<%- include('../partials/footer.ejs') %>